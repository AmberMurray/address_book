<!-- EDIT OR ADD FORM -->

<div class="container col-md 8">
  <h1 class="col-md-offset-4">Add or Update Deets</h1>
  <form method="POST" action="/contacts/{{#if contact.id }}{{ contact.id }}?_method=PUT{{/if}}" class="well">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="first">First Name</label>
          <input type="text" name="first" class="form-control" id="first" value="{{ contact.first }}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="last">Last Name</label>
          <input type="text" name="last" class="form-control" id="last" value="{{ contact.last }}">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="text" name="phone" class="form-control" id="phone" value="{{ contact.phone }}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" class="form-control" id="email" value="{{ contact.email }}">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="image">Your Pic URL</label>
          <input type="url" name="image" class="form-control" id="image" value="{{ contact.image }}">
        </div>
      </div>
    </div>
    <h2>Address</h2>
    <hr>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <label for="line_1">House / Apt / Trailer # </label>
          <input type="text" name="line_1" value="{{ contact.line_1 }}" class="form-control" id="line_1">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <label for="line_2">Street</label>
          <input type="text" name="line_2" value="{{ contact.line_2 }}" class="form-control" id="line_2">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="city">City</label>
          <input type="text" name="city" class="form-control" id="city" value="{{ contact.city }}">
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="state">State</label>
          <input type="text" name="state" class="form-control" id="state" value="{{ contact.state }}">
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <label for="zip">Zip</label>
          <input type="text" name="zip" class="form-control" id="zip" min="5" value="{{ contact.zip }}" placeholder="1 2 3 4 5 ">
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
